{
    "[nix]": {
        "editor.defaultFormatter": "jnoortheen.nix-ide"
    },
    "editor": {
      "bracketPairColorization": {
        "enabled": true
      },
      "defaultFormatter": "esbenp.prettier-vscode",
      "fontFamily": "'Monaspace Krypton','Font Awesome 6 Free Solid'",
      "fontLigatures": "'calt', 'liga', 'dlig', 'ss01', 'ss02', 'ss03', 'ss06'",
      "guides": {
        "bracketPairs": true,
        "bracketPairsHorizontal": true,
        "highlightActiveBracketPair": true
      },
      "stickyScroll": {
        "enabled": true
      },
      "tabSize": 2
    },
    "explorer": {
        "compactFolders": false,
        "confirmDelete": false,
        "confirmDragAndDrop": false
    },
    "git.autofetch": true,
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.pullTags": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "git.enableCommitSigning": true,
    "files.eol": "\n",

    "nix": {
        "enableLanguageServer": true,
        "serverPath": "nixd",
        "serverSettings": {
          "nixd": {
            "formatting": {
                "command": "nixfmt"
            }
          }
        }
    },

    "[yaml]": {

        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": "full",
        "editor.quickSuggestions": {
            "other": true,
            "comments": false,
            "strings": true
        },
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "vs-kubernetes": {
        "vs-kubernetes.crd-code-completion": "enabled",
        "vscode-kubernetes.minikube-path.mac": "/Users/ryan/.vs-kubernetes/tools/minikube/darwin-arm64/minikube",
        "vscode-kubernetes.kubectl-path.mac": "/Users/ryan/.vs-kubernetes/tools/kubectl/kubectl",
        "vscode-kubernetes.helm-path.mac": "/Users/ryan/.vs-kubernetes/tools/helm/darwin-arm64/helm",
        "vs-kubernetes.knownKubeconfigs": [
            "/Users/ryan/kubeconfig"
        ],
        "vs-kubernetes.kubeconfig": "/Users/ryan/kubeconfig"
    },
    "explorer.confirmDelete": false,
    "redhat.telemetry.enabled": false,
    "terminal.external.osxExec": "warp.app",
    "[python]": {
        "editor.formatOnType": true
    },
    "update": {
        "mode": "manual",
        "showReleaseNotes": false
    },
    "editor.inlineSuggest.enabled": true,
    "vscode-kubernetes.helm-path.mac": "/opt/homebrew/bin/helm",
    "vscode-kubernetes.kubectl-path.mac": "/opt/homebrew/bin//kubectl",
    "vscode-kubernetes.helm-path": "",
    "vscode-kubernetes.kubectl-path": "",
    "github.copilot.editor.enableAutoCompletions": true,
    "githubPullRequests.createOnPublishBranch": "never",
    "github.copilot.preferredAccount": "carpenike",
    "github.copilot.advanced": {},
    "workbench": {
        "colorTheme": "Catppuccin Macchiato",
        "iconTheme": "catppuccin-perfect-macchiato",
        "sideBar": {
          "location": "left"
        },
        "startupEditor": "newUntitledFile",
        "tree": {
          "renderIndentGuides": "none"
        },
      }
}
